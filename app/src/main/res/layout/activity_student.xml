<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextColor="@color/white"
        app:titleTextColor="@color/white" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvStudFIO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:elevation="100dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Иванов Иван Иванович"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_exit_student"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvStudClassInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:elevation="100dp"
                android:fontFamily="@font/roboto_medium"
                android:text="9a   ш1"
                android:textColor="@color/white"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvStudFIO"
                app:layout_constraintTop_toBottomOf="@+id/tvStudFIO" />

            <ImageView
                android:id="@+id/btn_exit_student"
                android:layout_width="52dp"
                android:layout_height="51dp"
                android:layout_marginEnd="10dp"
                android:elevation="20dp"
                android:onClick="exit_student_account"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_exit_white" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imgvGoodMood"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="35dp"
        android:onClick="imgvGoodMood_Click"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMoodComment"
        app:srcCompat="@drawable/ic_thumb_good" />

    <ImageView
        android:id="@+id/imgvNeutralMood"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:onClick="imgvNeutralMood_Click"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgvGoodMood"
        app:layout_constraintStart_toStartOf="@+id/imgvGoodMood"
        app:layout_constraintTop_toBottomOf="@+id/imgvGoodMood"
        app:srcCompat="@drawable/ic_thumb_neutral" />

    <ImageView
        android:id="@+id/imgvBadMood"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:onClick="imgvBadMood_Click"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgvNeutralMood"
        app:layout_constraintStart_toStartOf="@+id/imgvNeutralMood"
        app:layout_constraintTop_toBottomOf="@+id/imgvNeutralMood"
        app:srcCompat="@drawable/ic_thumb_bad" />

    <TextView
        android:id="@+id/tvMoodComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Какое у вас настроение сегодня?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarStudent" />


    <ImageView
        android:id="@+id/imgvVoteDone"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarStudent"
        app:srcCompat="@drawable/ic_done_2" />

    <ProgressBar
        android:id="@+id/pbLoadStudentVoteState"
        style="?android:attr/progressBarStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:indeterminateTint="@color/main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarStudent" />




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/imgvAnsDone"
        android:layout_width="63dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/tvMoodComment"
        app:layout_constraintStart_toStartOf="@+id/tvMoodComment"
        app:layout_constraintTop_toBottomOf="@+id/tvMoodComment"
        app:srcCompat="@drawable/ic_thumb_good" />

</androidx.constraintlayout.widget.ConstraintLayout>